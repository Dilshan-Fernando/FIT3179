{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background":"transparent",
  "hconcat": [
    {"width": 800,
     "height": 500,
     "title": {"text":"Record of annual temperature over time across different countries","fontSize":25},
     "layer":
    [
        {
        "data": {
    "values": [
      {}
    ]
  },
  "mark": "rule",
  "encoding": {
    "y": {
      "datum": 15
    },
    "color": {
      "value": "black"
    },
    "size": {
      "value": 3
    },
    "strokeDash": {
      "value": [5, 5] 
    }
  }
        },    

        {
            "data": 
            {
                "url": "https://raw.githubusercontent.com/Dilshan-Fernando/FIT3179/refs/heads/main/data/combined_temperature.csv"
            },
            "transform":
            [
                {"filter": "datum.Country == 'Australia'|| datum.Country == 'Iran'||datum.Country == 'Canada'||datum.Country == 'Brazil'||datum.Country == 'Russia'|| datum.Country == 'Japan'||datum.Country == 'Indonesia'|| datum.Country == 'Argentina'||datum.Country == 'South Africa'||datum.Country == 'South Korea' "}
            ],
            "mark": {"type": "line","size":3},
            "encoding": {
                "x": {"field": "Year", "type": "temporal","axis": {"labelFontSize": 15,"titleFontSize":20}},
                "y": {"field": "Annual Mean", "type": "quantitative","title":"Average temperature","axis": {"labelFontSize": 15,"titleFontSize":20}},
                "color": {"field": "Country", "type": "nominal","legend":{"offset":20,"labelFontSize":14, "symbolStrokeWidth": 10}},
                "tooltip": [
                    {"field": "Annual Mean", "type": "quantitative","title":"Average temperature", "format":"0.1f"},
                    {"field": "Year", "type": "temporal"},
                    {"field":"Country","type":"nominal","title":"Country"}
                ]
            }
        
        },
      {"data": {
        "values": [
          {
            "lon1": 1800,
            "lat1": 100
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "center", 
        "baseline": "middle", 
        "color": "black",
        "fontWeight": "bold",
        "fontSize": 15,
        "dx":625,
        "dy":170
      },
      "encoding": {
        
        "longitude": {"field": "lon1", "aggregate": "mean"},
       
        "latitude": {"field": "lat1", "aggregate": "mean"},
        
        "text": {"value": "Global mean temperature is 15 degrees Celcius"}
      }
    }
        

    ]
}
    
]
}